<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameOfUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left|right"
        android:text="User Name"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tableLayout"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/userBalance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left|right"
        android:text="Balance"
        android:textSize="36sp"
        android:layout_below="@+id/nameOfUser"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:id="@+id/tableLayout"
        android:layout_above="@+id/deduct_btn"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imagePlus20"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/note20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:padding="18dp"
                android:text="20 $"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/imageMinus20"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imagePlus20"
                android:scaleType="fitCenter"
                android:src="@drawable/minus" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/imagePlus50"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/note50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:padding="18dp"
                android:text="50 $" />

            <ImageButton
                android:id="@+id/imageMinus50"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:src="@drawable/minus" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imagePlus100"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/note100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:padding="18dp"
                android:text="100 $" />

            <ImageButton
                android:id="@+id/imageMinus100"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:src="@drawable/minus" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imagePlus500"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/note500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:padding="18dp"
                android:text="500 $" />

            <ImageButton
                android:id="@+id/imageMinus500"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:src="@drawable/minus" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imagePlus1000"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/note1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:padding="18dp"
                android:text="1000 $" />

            <ImageButton
                android:id="@+id/imageMinus1000"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:src="@drawable/minus" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/deduct_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="24sp" />
</RelativeLayout>